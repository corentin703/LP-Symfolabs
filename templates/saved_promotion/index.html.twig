{% extends 'base.html.twig' %}

{% block title %}Promotion index{% endblock %}

{% block body %}
    <h1>Promotion sauvegard√©ee index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Type</th>
            <th>Title</th>
            <th>Content</th>
            <th>Discount</th>
            <th>Created_at</th>
            <th>Start_at</th>
            <th>Expires_at</th>
            <th>Became_hot_at</th>
            <th>Delivery_fees</th>
            <th>Company</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for promotion in savedPromotions %}
            <tr>
                <td>{{ promotion.id }}</td>
                <td>{{ promotion.kind.name }}</td>
                <td>{{ promotion.title }}</td>
                <td>{{ promotion.content }}</td>
                <td>{{ promotion.discount }}</td>
                <td>{{ promotion.createdAt ? promotion.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ promotion.startAt ? promotion.startAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ promotion.expiresAt ? promotion.expiresAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ promotion.becameHotAt ? promotion.becameHotAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ promotion.deliveryFees }}</td>
                <td>{{ promotion.company }}</td>
                <td>
                    <a href="{{ path('promotion_show', {'id': promotion.id}) }}">show</a>
                    <form action="{{ path('saved_promotion_delete', {'id': promotion.id}) }}" method="post">
                        <input type="submit" value="Delete">
                    </form>
{#                    <a href="{{ path('promotion_edit', {'id': promotion.id}) }}">edit</a>#}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no saved promotion found</td>

            </tr>
            <tr>
                <td >user id :{{ userID }} taille : {{ size }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{#    <a href="{{ path('promotion_new') }}">Create new</a>#}
{% endblock %}

