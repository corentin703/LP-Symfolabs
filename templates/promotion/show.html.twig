{% extends 'base.html.twig' %}

{% block title %}Promotion{% endblock %}

{% block body %}
    <h1>Promotion</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ promotion.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ promotion.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ promotion.content }}</td>
            </tr>
            <tr>
                <th>Discount</th>
                <td>{{ promotion.discount }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ promotion.createdAt ? promotion.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Start_at</th>
                <td>{{ promotion.startAt ? promotion.startAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Expires_at</th>
                <td>{{ promotion.expiresAt ? promotion.expiresAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Became_hot_at</th>
                <td>{{ promotion.becameHotAt ? promotion.becameHotAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Delivery_fees</th>
                <td>{{ promotion.deliveryFees }}</td>
            </tr>
            <tr>
                <th>Company</th>
                <td>{{ promotion.company }}</td>
            </tr>
            <tr>
                <th>Nombre de vues</th>
                <td>{{ promotion.viewCount }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('promotion_index') }}">back to list</a>

    <a href="{{ path('promotion_edit', {'id': promotion.id}) }}">edit</a>

    {{ include('promotion/_delete_form.html.twig') }}

    {{ include('comment/_comments_section.html.twig') }}

{% endblock %}
