{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Badges</th>
                <td>
                    {% for badge in user.badges.values %}
                        {{ badge.name }},
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ user.pseudo }}</td>
            </tr>
            <tr>
                <th>Nombre de promotions postées</th>
                <td>{{ promotions_count }}</td>
            </tr>
            <tr>
                <th>Nombre de commentaires postées</th>
                <td>{{ comments_count }}</td>
            </tr>
            <tr>
                <th>Score le plus haut</th>
                <td>{{ hotterPromotionScore }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}">back to list</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
